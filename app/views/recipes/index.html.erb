<div class="recipe_page">
<%if can? :manage, Recipe%>
<h1 class="recipes_heading">Recipes</h1>
<div id="recipes">
  <%= link_to "New recipe", new_recipe_path, class: "new_recipe" %>
  <% @recipes.each do |recipe| %>
    <%= link_to recipe do %>
    <%= render recipe %>
    <%end%>
  <% end %>
</div>
<%end%>
<%if cannot? :manage, Recipe%>
   <p>Do you want to add recipes?</p>
   <%= link_to new_user_registration_path do%>
       <button>Sign up</button>
   <%end%>
<%end%>